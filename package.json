{
	"name": "vscode-profiles",
	"displayName": "Profiles",
	"description": "Quickly change your settings and extensions configuration",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.44.0",
		"node": "^10.16.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"profiles",
		"extensions",
		"settings",
		"configuration"
	],
	"activationEvents": [
		"onCommand:vscode-profiles.switch",
		"onCommand:vscode-profiles.create",
		"onCommand:vscode-profiles.clone",
		"onCommand:vscode-profiles.rename",
		"onCommand:vscode-profiles.delete"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "Profiles",
				"properties": {
					"sidenotes.path": {
						"type": "string",
						"description": "Specifies the folder where profiles are stored"
					}
				}
			}
		],
		"commands": [
			{
				"command": "vscode-profiles.switch",
				"title": "Profiles: switch"
			},
			{
				"command": "vscode-profiles.create",
				"title": "Profiles: create"
			},
			{
				"command": "vscode-profiles.clone",
				"title": "Profiles: clone"
			},
			{
				"command": "vscode-profiles.delete",
				"title": "Profiles: delete"
			},
			{
				"command": "vscode-profiles.rename",
				"title": "Profiles: rename"
			},
			{
				"command": "vscode-profiles.clean",
				"title": "Profiles: rename"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.43.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
