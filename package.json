{
	"name": "vscode-profiles",
	"displayName": "Profiles",
	"description": "Quickly change your settings and extensions configuration",
	"version": "1.0.0",
	"author": {
		"name": "Yaroslav Larin",
		"email": "cyberbiont@gmail.com"
	},
	"publisher": "cyberbiont",
	"repository": {
		"type": "git",
		"url": "https://github.com/cyberbiont/vscode-profiles.git"
	},
	"license": "ISC",
	"engines": {
		"vscode": "^1.44.0",
		"node": "^10.16.0"
	},
	"icon": "images/gear.png",
	"categories": [
		"Other"
	],
	"keywords": [
		"profiles",
		"extensions",
		"settings",
		"configuration"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "Profiles",
				"properties": {
					"paths.profiles": {
						"type": "string",
						"description": "Specifies the folder where profiles are stored"
					},
					"paths.extensionsStorage": {
						"type": "string",
						"description": "Specifies the folder where all symlinkified extensions will be stored"
					},
					"extensions.symlinkifyExtensions": {
						"type": "boolean",
						"description": "It true, all extensions are replaced with symlinks in profile folders"
					},
					"workspaceProfile": {
						"type": "string",
						"description": "Use this in your workspace settings to initialize the profile you need for your project on load"
					},
					"autoSwitchToWorkspaceProfile": {
						"type": "boolean",
						"description": "Wether extension should automatically switch to profile, that is specified in workspace settings"
					}
				}
			}
		],
		"commands": [
			{
				"command": "vscode-profiles.switch",
				"title": "Profiles: Switch"
			},
			{
				"command": "vscode-profiles.create",
				"title": "Profiles: Create"
			},
			{
				"command": "vscode-profiles.clone",
				"title": "Profiles: Clone"
			},
			{
				"command": "vscode-profiles.delete",
				"title": "Profiles: Delete"
			},
			{
				"command": "vscode-profiles.rename",
				"title": "Profiles: Rename"
			},
			{
				"command": "vscode-profiles.clean",
				"title": "Profiles: Clean"
			},
			{
				"command": "vscode-profiles.rescan",
				"title": "Profiles: Rescan"
			},
			{
				"command": "vscode-profiles.maintenance",
				"title": "Profiles: Maintenance"
			}
		]
	},
	"scripts": {
		"compile": "tsc --build src && ts-cleaner -d out",
		"watch": "tsc --build src --watch && ts-cleaner -d out",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"vscode:prepublish": "webpack --mode production",
		"vcompile": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./"
	},
	"devDependencies": {
		"@types/node": "^14.14.37",
		"@types/vscode": "^1.55.0",
		"@typescript-eslint/eslint-plugin": "^4.20.0",
		"@typescript-eslint/parser": "^4.20.0",
		"@vue/eslint-config-prettier": "^6.0.0",
		"@vue/eslint-config-typescript": "^7.0.0",
		"chai": "^4.3.4",
		"eslint": "^7.23.0",
		"eslint-config-airbnb": "^18.2.1",
		"eslint-config-airbnb-base": "^14.2.1",
		"eslint-config-cyberbiont": "^1.0.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-import-resolver-typescript": "^2.4.0",
		"eslint-import-resolver-webpack": "^0.13.0",
		"eslint-plugin-chai-expect": "^2.2.0",
		"eslint-plugin-chai-friendly": "^0.6.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jest": "^24.3.2",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-react": "^7.23.1",
		"eslint-plugin-react-hooks": "^4.2.0",
		"eslint-plugin-vue": "^7.8.0",
		"hint": "^6.1.3",
		"jest": "^26.6.3",
		"jest-html-reporters": "^2.1.3",
		"jest-stare": "^2.2.1",
		"omnimock": "^0.8.1",
		"prettier": "^2.2.1",
		"pug-lint": "^2.6.0",
		"pug-lint-config-clock": "^2.0.0",
		"stylelint": "^13.12.0",
		"stylelint-config-prettier": "^8.0.2",
		"stylelint-config-standard": "^21.0.0",
		"stylelint-plugin-stylus": "^0.10.0",
		"stylelint-prettier": "^1.2.0",
		"ts-cleaner": "^1.0.5",
		"ts-jest": "^26.5.4",
		"ts-loader": "^8.1.0",
		"ts-node": "^9.1.1",
		"typescript": "^4.2.3",
		"vscode-test": "^1.5.2",
		"webpack": "^5.30.0",
		"webpack-cli": "^4.6.0"
	},
	"dependencies": {
		"ts-essentials": "^7.0.1"
	},
	"prettier": "eslint-config-cyberbiont/prettier.config.js",
	"eslintConfig": {
		"extends": "cyberbiont"
	}
}
