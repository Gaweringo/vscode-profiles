        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#bf0093",
        "activityBarBadge.foreground": "#e7e7e7",
        "statusBar.background": "#00141a",
        "statusBar.border": "#00141a",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#003b4d",
        "titleBar.activeBackground": "#00141a",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.border": "#00141a",
        "titleBar.inactiveBackground": "#00141a99",
        "titleBar.inactiveForeground": "#e7e7e799"
